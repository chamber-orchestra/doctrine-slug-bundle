{
  "name": "chamber-orchestra/doctrine-slug-bundle",
  "type": "symfony-bundle",
  "description": "Symfony bundle for generating unique, URL-friendly slugs for Doctrine ORM entities using PHP 8 attributes",
  "keywords": [
    "symfony",
    "doctrine",
    "slug",
    "slugify",
    "url-friendly",
    "seo",
    "doctrine-orm",
    "symfony-bundle",
    "unique-slug",
    "php-attributes"
  ],
  "homepage": "https://github.com/chamber-orchestra/doctrine-slug-bundle",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/chamber-orchestra/doctrine-slug-bundle/issues",
    "source": "https://github.com/chamber-orchestra/doctrine-slug-bundle"
  },
  "authors": [
    {
      "name": "Andrew Lukin",
      "email": "lukin.andrej@gmail.com",
      "homepage": "https://github.com/wtorsi",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.5",
    "chamber-orchestra/metadata-bundle": "8.0.*",
    "symfony/string": "8.0.*",
    "symfony/translation-contracts": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.64",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^13.0",
    "symfony/test-pack": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "ChamberOrchestra\\DoctrineSlugBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "8.0.*"
    }
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "analyse": "vendor/bin/phpstan analyse",
    "cs-fix": "vendor/bin/php-cs-fixer fix",
    "cs-check": "vendor/bin/php-cs-fixer fix --dry-run --diff"
  }
}
